<idea-plugin version="2">
    <name>JCompilo Java Compiler</name>
    <description>A pure Java 6+ build tool with advanced compiler features including Tail Call Optimisation
    </description>
    <version>dev.build</version>
    <vendor>Daniel Worthington-Bodart</vendor>

    <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="139.224.1"/>

    <extensions defaultExtensionNs="com.intellij">
        <java.compiler implementation="com.googlecode.jcompilo.intellij.JCompiloBackendCompiler"/>
        <compileServer.plugin classpath="asm-all-5.0.3.jar;jcompilo-dev.build-dep.jar;jcompilo-intellij-dev.build.jar;shavenmaven-95-dep.jar;totallylazy-1.21.jar;yadic-1.5.jar"/>
        <projectService serviceInterface="com.intellij.openapi.compiler.CompilerManager"
                        serviceImplementation="com.googlecode.jcompilo.intellij.JCompiloManager"
                        overrides="true"/>
    </extensions>
</idea-plugin>